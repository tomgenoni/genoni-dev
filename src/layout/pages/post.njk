{% from "../macros/picture.njk" import picture %}
{% set bodyClass = "post" %}

{% include "partials/common/head.njk" %}
{% include "partials/common/header.njk" %}


{{ picture
    (
        image=fm.hero.image,
        alt=fm.hero.alt,
        ar="1-1",
        s_ar="8-5",
        l_ar="2-1",
        class="stripe-bkg wrap-huge"
    )
}}

<div class="content center ph3 m_ph5 mb6 l_pt0">
    <div class="mv4 m_mv5">
        <div class="bg-red white pv1 ph2 f9 ttu fw6 ls2 lh-even dib br1 mb1">Write</div>
        <div class="mb3 m_mb4 f7 gray">{{fm.date}}</div>
        <h1 class="f2 m_f1 lh-solid fw8 mb1">{{fm.title}}</h1>
        <div class="f3 m_f2 lh-solid fw3 gray m_-ls1">{{fm.description}}</div>
    </div>
    <div class="markdown markdown-post">
        {{body | safe}}
    </div>
</div>

